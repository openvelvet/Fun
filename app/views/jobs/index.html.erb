<h1>Listing jobs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Skills</th>
      <th>Price</th>
      <th>Rate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= job.description %></td>
        <td><%= job.skills %></td>
        <td><%= job.price %></td>
        <td><%= job.rate %></td>
        <td><%= link_to 'Show', job, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_job_path(job), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?', class: "btn btn-link" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_job_path, class: "btn btn-link" %>
